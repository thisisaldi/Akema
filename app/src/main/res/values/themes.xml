<resources xmlns:tools="http://schemas.android.com/tools">
  <!-- Base application theme. -->
  <style name="Base.Theme.Akema" parent="Theme.Material3.Light.NoActionBar">
    <item name="colorPrimary">@color/orange</item>
    <item name="android:windowBackground">@color/white</item>
    <item name="fontFamily">@font/manrope</item>
    <item name="android:textColor">@color/black</item>
    <item name="android:statusBarColor">@color/white</item>
  </style>

  <style name="Theme.Akema" parent="Base.Theme.Akema" />

  <style name="BottomNavigationView">
    <item name="colorSecondaryContainer">@color/white</item>
    <item name="colorOnSecondaryContainer">@color/orange</item>
  </style>

  <style name="PrimaryButton">
    <item name="android:textColor">@color/white</item>
    <item name="android:textStyle">bold</item>
    <item name="android:background">@drawable/rounded_bg</item>
  </style>

  <style name="SecondaryButton">
    <item name="android:textColor">@color/black100</item>
    <item name="android:textStyle">bold</item>
    <item name="android:background">@drawable/rounded_bg</item>
  </style>
</resources>