<resources xmlns:tools="http://schemas.android.com/tools">
  <!-- Base application theme. -->
  <style name="Base.Theme.Akema" parent="Theme.Material3.Light.NoActionBar">
    <item name="colorPrimary">@color/orange</item>
    <item name="android:windowBackground">@color/white</item>
    <item name="fontFamily">@font/manrope</item>
    <item name="android:textColor">@color/black</item>
    <item name="android:statusBarColor">@color/white</item>
  </style>

  <style name="Theme.Akema" parent="Base.Theme.Akema" />

  <style name="BottomNavigationView">
    <item name="colorSecondaryContainer">@color/white</item>
    <item name="colorOnSecondaryContainer">@color/orange</item>
  </style>

  <style name="PrimaryButton">
    <item name="android:textColor">@color/white</item>
    <item name="android:textStyle">bold</item>
    <item name="android:background">@drawable/rounded_bg</item>
  </style>

  <style name="SecondaryButton">
    <item name="android:textColor">@color/black100</item>
    <item name="android:textStyle">bold</item>
    <item name="android:background">@drawable/rounded_bg</item>
  </style>

  <style name="FragmentTitle">
    <item name="android:textSize">24sp</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="ButtonWithIcon" parent="Widget.AppCompat.Button">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">#111314</item>
    <item name="android:textStyle">bold</item>
    <item name="android:background">?android:attr/selectableItemBackground</item>
    <item name="android:textSize">16sp</item>
    <item name="android:textAllCaps">false</item>
  </style>

  <style name="TextProfile">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">@color/black60</item>
  </style>

  <style name="TextProfieDescription">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">@color/black100</item>
  </style>

  <style name="ProfileButton">
    <item name="android:layout_width">156dp</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:textStyle">bold</item>
    <item name="android:background">@drawable/rounded_bg</item>
  </style>

  <style name="EditInput">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">52dp</item>
    <item name="android:background">@drawable/input_background</item>
    <item name="android:layout_marginTop">8dp</item>
    <item name="android:paddingStart">20dp</item>
    <item name="android:paddingEnd">20dp</item>
  </style>

  <style name="EditInputSub">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">16sp</item>
    <item name="android:textStyle">normal</item>
    <item name="android:layout_marginTop">10dp</item>
  </style>

  <style name="CalenderViewCustom" parent="Theme.AppCompat">
    <item name="colorControlActivated">@color/orange</item>
    <item name="android:textColorPrimary">@color/black100</item>
  </style>

  <style name="CalenderViewWeekCustomText" parent="android:TextAppearance.DeviceDefault.Small">
    <item name="android:textColor">@color/black100</item>
    <item name="android:fontFamily">@font/lexend</item>
  </style>

  <style name="CalenderViewDateCustomText">
    <item name="android:fontFamily">@font/lexend</item>
    <item name="android:textColor">@drawable/calendar_date_selector</item>
  </style>

  <style name="ThemeOverlay.Akema.FullscreenContainer" parent="">
    <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
    <item name="fullscreenTextColor">@color/light_blue_A200</item>
  </style>

  <style name="ThemeOverlay.App.Button.TextButton" parent="ThemeOverlay.Material3.Button.TextButton">
    <item name="colorOnContainer">@color/primary</item>
  </style>

</resources>